

<div class="pagination-container">
  <div class="pagination-element buton">
   <a href={{route.prevLink}}>Anterior</b> 
  </div>
  <div class="pagination-element page">
   <b>{{route.page}}</b>  
  </div>
  <div class="pagination-element button">
    <a href={{route.nextLink}}>Siguiente</b>  
  </div>
</div>


{{#each products}}
  <div id="productID-{{this.title}}">
    <div class='uk-card uk-card-default'>
      <div class='uk-card-media-top'>
        <img alt='foto producto' />
      </div>
      <div class='uk-card-body'>
        <h3 class='uk-card-title'>{{this.title}}</h3>
        <h5>USD ${{this.price}}</h5>
        <span class='uk-badge'>{{this.category}}</span>
        <p>{{this.description}}</p>
        <button class='uk-button uk-button-secondary uk-button-small'>Agregar al
          carrito</button>
      </div>
    </div>
  </div>
{{/each}}